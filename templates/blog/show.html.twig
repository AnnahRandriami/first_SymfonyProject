{% extends 'base.html.twig'%}

    {% block body %}
        
        <article>
            <h2>{{ article.title }}</h2>
            <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }} dans la catégory cuisine</div>
            <div class="content">
                <img src="{{ article.image }}" alt="">
                {{ article.content | raw }}
            </div>
           <a href="{{ path('blog') }}" class="btn btn-primary">Retour</a>
        </article>


    {% endblock %}